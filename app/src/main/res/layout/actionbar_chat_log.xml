<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/toolbar_color">

    <ImageView
        android:id="@+id/chat_log_arrow_back"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/image_arrow_back"
        android:paddingStart="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_log_image"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:src="@drawable/kolobok"
        android:layout_marginStart="9dp"
        app:layout_constraintStart_toEndOf="@id/chat_log_arrow_back"
        app:layout_constraintBottom_toBottomOf="@id/chat_log_arrow_back"
        app:layout_constraintTop_toTopOf="@id/chat_log_arrow_back"/>

    <TextView
        android:id="@+id/chat_log_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:text="Chat"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@id/chat_log_image"
        app:layout_constraintBottom_toBottomOf="@id/chat_log_image"
        app:layout_constraintTop_toTopOf="@id/chat_log_image" />

</androidx.constraintlayout.widget.ConstraintLayout>